{
  "name": "@offsppwa-vue/lambdaSrv",
  "version": "0.0.1",
  "description": "Couch Pouch coordination server",
  "author": "Martin H. Bramwell <martinhbramwell@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "dev": "nodemon            src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "dbg": "esw src test && nodemon  --inspect src/index.js --exec \"node -r dotenv/config -r babel-register\"",
    "clean": "rimraf dist",
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "test": "jest --watch",
    "lint": "esw -w src test"
  },
  "repository": {
    "type": "git",
    "url": "git+git@github.com:martinhbramwell/vue-offlinefirst-spa-pwa.git"
  },
  "bugs": {
    "url": "https://github.com/martinhbramwell/vue-offlinefirst-spa-pwa/issues"
  },
  "keywords": [
    "CouchDb",
    "PouchDb",
    "Replication",
    "Offline First",
    "Serverless"
  ],
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "body-parser": "^1.18.2",
    "chokidar": "^3.0.0",
    "express": "^4.16.2",
    "logform": "^1.10.0",
    "morgan": "^1.9.0",
    "pouchdb": "^7.1.0",
    "pouchdb-adapter-memory": "^7.0.0",
    "pouchdb-find": "^7.0.0",
    "pug": "^2.0.0-beta11",
    "queue": "^4.5.0",
    "relational-pouch": "^3.1.0",
    "rimraf": "^2.6.2",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "babel-jest": "^21.2.0",
    "babel-register": "^6.26.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-cypress": "^2.0.1",
    "eslint-plugin-html": "^4.0.6",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-watch": "^3.1.3",
    "jest": "^23.6.0",
    "nodemon": "^1.18.7",
    "reload": "^2.3.1",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread",
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "plugins": [
      "import",
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "rules": {
      "jest/no-focused-tests": 2,
      "jest/no-identical-title": 2
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
